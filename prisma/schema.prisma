generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.svg"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  name        String
  description String
  price       Float
  tags        String[]
  comments    CommentProduct[]

  likeCount Int            @default(0)
  likeUsers ProductLikes[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Article {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  title    String
  content  String
  comments CommentArticle[]

  likeCount Int            @default(0)
  likeUsers ArticleLikes[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommentProduct {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int

  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CommentArticle {
  id        Int     @id @default(autoincrement())
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId Int
  user      User    @relation(fields: [userId], references: [id])
  userId    Int

  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  nickname String
  password String
  image    String?

  createProducts Product[]
  likeProducts   ProductLikes[]

  createArticles Article[]
  likeArticles   ArticleLikes[]

  commentProducts CommentProduct[]
  commentArticles CommentArticle[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductLikes {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int

  likeCountBool Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, productId])
}

model ArticleLikes {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId Int

  likeCountBool Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, articleId])
}
