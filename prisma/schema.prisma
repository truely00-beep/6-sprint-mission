generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  description String
  price       Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tags        String[]
  imageUrls   String[]
  comments    Comment[]
}

model Article {
  id        String    @id @default(uuid())
  title     String
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  imageUrls String[]
  comments  Comment[]
}

model Comment {
  id        String   @id @default(uuid())
  productId String?
  articleId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  content   String
  article   Article? @relation(fields: [articleId], references: [id], onDelete: Cascade)
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
}
